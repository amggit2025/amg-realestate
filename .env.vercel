# ======================================================
# ðŸš€ Vercel Environment Variables Template
# ======================================================
# Copy these variables to Vercel Dashboard > Settings > Environment Variables

# Database (MySQL from PlanetScale, Railway, or Aiven)
DATABASE_URL="mysql://user:password@host:3306/database_name"

# JWT Secrets (Generate new secure keys)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_ADMIN_SECRET="your-super-secret-admin-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Cloudinary (Required for image uploads)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Email Configuration (Hostinger SMTP or any SMTP provider)
SMTP_HOST="smtp.hostinger.com"
SMTP_PORT="587"
SMTP_USER="site@amg-invest.com"
SMTP_PASS="your-email-password"
FROM_EMAIL="site@amg-invest.com"
FROM_NAME="AMG Real Estate"

# App URL (Your Vercel deployment URL)
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"
NODE_ENV="production"

# Optional: Analytics
NEXT_TELEMETRY_DISABLED="1"
